@model FitnessCenterProject.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<h1 class="section-title mb-3">Kategori Düzenle</h1>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="card p-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button class="btn btn-dark" type="submit">Güncelle</button>
    <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
