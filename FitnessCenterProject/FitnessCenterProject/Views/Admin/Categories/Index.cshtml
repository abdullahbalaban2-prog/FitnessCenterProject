@model IEnumerable<FitnessCenterProject.Models.PortfolioCategory>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="section-title">Kategoriler</h1>
    <a class="btn btn-dark" asp-action="Create">Yeni Kategori</a>
</div>

<table class="table table-striped bg-white">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Slug</th>
            <th>Oluşturma</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Slug</td>
                <td>@category.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@category.Id">Düzenle</a>
                    <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline">
                        <button class="btn btn-sm btn-outline-danger" type="submit">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
