@model IEnumerable<FitnessCenterProject.Models.Project>

@{
    ViewData["Title"] = "Projeler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="section-title">Projeler</h1>
    <a class="btn btn-dark" asp-action="Create">Yeni Proje</a>
</div>

<table class="table table-striped bg-white">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Öne Çıkan</th>
            <th>Oluşturma</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Title</td>
                <td>@project.Category?.Name</td>
                <td>@(project.IsFeatured ? "Evet" : "Hayır")</td>
                <td>@project.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@project.Id">Düzenle</a>
                    <form asp-action="Delete" asp-route-id="@project.Id" method="post" class="d-inline">
                        <button class="btn btn-sm btn-outline-danger" type="submit">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
