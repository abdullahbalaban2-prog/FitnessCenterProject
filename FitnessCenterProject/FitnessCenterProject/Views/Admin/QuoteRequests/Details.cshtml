@model FitnessCenterProject.Models.QuoteRequest

@{
    ViewData["Title"] = "Teklif Detayı";
}

<h1 class="section-title mb-3">Teklif Detayı</h1>

<div class="card p-4">
    <p><strong>Ad Soyad:</strong> @Model.FullName</p>
    <p><strong>E-posta:</strong> @Model.Email</p>
    <p><strong>Telefon:</strong> @Model.Phone</p>
    <p><strong>Proje Tipi:</strong> @Model.ProjectType</p>
    <p><strong>Bütçe Aralığı:</strong> @Model.BudgetRange</p>
    <p><strong>İstenen Tarih:</strong> @(Model.DesiredDate?.ToString("dd.MM.yyyy") ?? "-")</p>
    <p><strong>Mesaj:</strong> @Model.Message</p>
    <p><strong>Tarih:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>

    <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
</div>
