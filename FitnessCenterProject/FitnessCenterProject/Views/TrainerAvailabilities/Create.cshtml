@model FitnessCenterProject.Models.TrainerAvailability

<h1 class="cf-title">Yeni Müsaitlik Ekle</h1>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="cf-card p-4 shadow">
            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="cf-label">Eğitmen</label>
                    <select asp-for="TrainerId" asp-items="ViewBag.TrainerId" class="cf-input"></select>
                </div>

                <div class="mb-3">
                    <label class="cf-label">Gün</label>
                    <select asp-for="DayOfWeek" class="cf-input">
                        @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
                        {
                            <option value="@day">@day</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="cf-label">Başlangıç Saati</label>
                    <input asp-for="StartTime" type="time" class="cf-input" />
                </div>

                <div class="mb-3">
                    <label class="cf-label">Bitiş Saati</label>
                    <input asp-for="EndTime" type="time" class="cf-input" />
                </div>

                <button class="cf-btn-primary w-100">Kaydet</button>

            </form>
        </div>
    </div>
</div>