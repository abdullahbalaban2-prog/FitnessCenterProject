@model IEnumerable<FitnessCenterProject.Models.TrainerAvailability>

<h1 class="cf-title mb-4">Eğitmen Müsaitlikleri</h1>

<a asp-action="Create" class="cf-btn-primary mb-3">Yeni Müsaitlik Ekle</a>

<div class="table-responsive">
    <table class="table table-dark table-striped table-hover cf-table">
        <thead>
            <tr>
                <th>Eğitmen</th>
                <th>Gün</th>
                <th>Başlangıç</th>
                <th>Bitiş</th>
                <th style="width:180px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Trainer.FullName</td>
                    <td>@a.DayOfWeek</td>
                    <td>@a.StartTime.ToString(@"hh\:mm")</td>
                    <td>@a.EndTime.ToString(@"hh\:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .cf-table thead {
        background: #d90000 !important;
        color: white;
        font-weight: bold;
    }

    .cf-table tbody tr:hover {
        background: #550000 !important;
    }
</style>