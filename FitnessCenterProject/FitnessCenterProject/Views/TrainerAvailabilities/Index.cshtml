@model IEnumerable<FitnessCenterProject.Models.TrainerAvailability>

@{
    ViewData["Title"] = "Müsaitlikler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Müsaitlikler</h2>
    <a asp-action="Create" class="btn btn-primary">Yeni Müsaitlik Ekle</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Henüz müsaitlik tanımlanmamış.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>Eğitmen</th>
                    <th>Gün</th>
                    <th>Başlangıç</th>
                    <th>Bitiş</th>
                    <th style="width:180px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@(a.Trainer != null ? a.Trainer.FullName : "-")</td>
                        <td>@a.DayOfWeek</td>
                        <td>@a.StartTime.ToString(@"hh\:mm")</td>
                        <td>@a.EndTime.ToString(@"hh\:mm")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
