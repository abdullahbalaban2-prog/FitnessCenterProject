@model IEnumerable<FitnessCenterProject.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<h1 class="arena-page-title neon-red mb-4">Antrenörler</h1>

<div class="d-flex justify-content-between mb-4">
    <a asp-action="Create" class="btn arena-btn-lg-sm">Yeni Antrenör Ekle</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning fw-bold text-center">
        Henüz antrenör eklenmemiş.
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var t in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="arena-card arena-trainer-card">

                    <!-- Fotoğraf alanı yoksa avatar kullanıyoruz -->
                    <div class="trainer-avatar">
                        <i class="fas fa-dumbbell"></i>
                    </div>

                    <h3 class="fw-bold neon-red mt-3">@t.FirstName @t.LastName</h3>

                    <p class="text-light mb-1">
                        <strong>Uzmanlık:</strong> @t.Specialty
                    </p>

                    <p class="text-light mb-1">
                        <strong>Salon:</strong> @t.FitnessCenter?.Name
                    </p>

                    <p class="text-light small">@t.Bio</p>

                    <div class="arena-card-footer d-flex justify-content-between mt-3">
                        <a class="arena-btn-sm" asp-action="Details" asp-route-id="@t.Id">Detay</a>
                        <a class="arena-btn-sm-warning" asp-action="Edit" asp-route-id="@t.Id">Düzenle</a>
                        <a class="arena-btn-sm-danger" asp-action="Delete" asp-route-id="@t.Id">Sil</a>
                    </div>

                </div>
            </div>
        }
    </div>
}