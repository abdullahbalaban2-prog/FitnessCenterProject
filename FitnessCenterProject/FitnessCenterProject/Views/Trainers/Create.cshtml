@model FitnessCenterProject.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
}

<h1 class="arena-page-title neon-red mb-4">Yeni Antrenör Ekle</h1>

<div class="arena-form-container col-md-6">

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="FirstName" class="form-label arena-label"></label>
            <input asp-for="FirstName" class="form-control arena-input" />
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label arena-label"></label>
            <input asp-for="LastName" class="form-control arena-input" />
        </div>

        <div class="mb-3">
            <label asp-for="Specialty" class="form-label arena-label"></label>
            <input asp-for="Specialty" class="form-control arena-input" placeholder="Örn: CrossFit, Pilates, Fitness" />
        </div>

        <div class="mb-3">
            <label asp-for="Bio" class="form-label arena-label"></label>
            <textarea asp-for="Bio" class="form-control arena-input" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label arena-label">Spor Salonu</label>
            <select asp-for="FitnessCenterId"
                    asp-items="@ViewBag.FitnessCenterId"
                    class="form-select arena-input">
                <option value="">-- Salon Seçiniz --</option>
            </select>
        </div>

        <button type="submit" class="btn arena-btn-lg">Kaydet</button>
        <a asp-action="Index" class="btn arena-btn-outline ms-2">İptal</a>
    </form>

</div>