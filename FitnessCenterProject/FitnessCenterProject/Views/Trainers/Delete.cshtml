@model FitnessCenterProject.Models.Trainer

@{
    ViewData["Title"] = "Antrenör Sil";
}

<h1 class="arena-page-title neon-red mb-4">Antrenörü Sil</h1>

<div class="arena-card p-4">

    <h2 class="fw-bold text-danger">Bu antrenörü silmek istediğinizden emin misiniz?</h2>
    <hr class="arena-divider" />

    <p><strong>Ad Soyad:</strong> @Model.FirstName @Model.LastName</p>
    <p><strong>Uzmanlık:</strong> @Model.Specialty</p>
    <p><strong>Salon:</strong> @Model.FitnessCenter?.Name</p>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="arena-btn-sm-danger">Evet, Sil</button>
        <a asp-action="Index" class="arena-btn-outline ms-2">İptal</a>
    </form>

</div>