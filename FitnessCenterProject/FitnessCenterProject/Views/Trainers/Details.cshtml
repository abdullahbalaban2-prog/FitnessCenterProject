@model FitnessCenterProject.Models.Trainer

@{
    ViewData["Title"] = "Antrenör Detayı";
}

<h1 class="arena-page-title neon-red mb-4">Antrenör Detayı</h1>

<div class="arena-card p-4">

    <div class="trainer-avatar-large">
        <i class="fas fa-dumbbell"></i>
    </div>

    <h2 class="fw-bold neon-red mt-3">@Model.FirstName @Model.LastName</h2>

    <hr class="arena-divider" />

    <p><strong>Uzmanlık:</strong> @Model.Specialty</p>
    <p><strong>Biyografi:</strong> @Model.Bio</p>
    <p><strong>Spor Salonu:</strong> @Model.FitnessCenter?.Name</p>

    <div class="d-flex gap-2 mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="arena-btn-sm-warning">Düzenle</a>
        <a asp-action="Index" class="arena-btn-outline">Geri Dön</a>
    </div>

</div>