@model FitnessCenterProject.Models.Service

@{
    ViewData["Title"] = "Hizmet Detayı";
}

<h1 class="arena-page-title neon-red mb-4">Hizmet Detayı</h1>

<div class="arena-card p-4">

    <h2 class="fw-bold neon-red">@Model.Name</h2>
    <hr class="arena-divider" />

    <p><strong>Açıklama:</strong> @Model.Description</p>
    <p><strong>Süre:</strong> @Model.DurationMinutes dk</p>
    <p><strong>Ücret:</strong> @Model.Price ₺</p>
    <p><strong>Salon:</strong> @Model.FitnessCenter?.Name</p>

    <div class="d-flex gap-2 mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="arena-btn-sm-warning">Düzenle</a>
        <a asp-action="Index" class="arena-btn-outline">Geri Dön</a>
    </div>

</div>