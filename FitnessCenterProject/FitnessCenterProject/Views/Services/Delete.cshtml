@model FitnessCenterProject.Models.Service

@{
    ViewData["Title"] = "Hizmet Sil";
}

<h1>Hizmet Sil</h1>

<hr />

<h4>Bu hizmeti silmek istediğinize emin misiniz?</h4>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Description)</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.DurationMinutes)</dt>
            <dd class="col-sm-9">@Model.DurationMinutes</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Price)</dt>
            <dd class="col-sm-9">@Model.Price</dd>

            <dt class="col-sm-3">Spor Salonu</dt>
            <dd class="col-sm-9">@Model.FitnessCenter?.Name</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Vazgeç</a>
</form>
