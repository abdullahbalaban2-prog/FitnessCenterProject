@model FitnessCenterProject.Models.Service
@{
    ViewData["Title"] = "Hizmet Sil";
}

<h1 class="arena-page-title neon-red mb-4">Hizmeti Sil</h1>

<div class="arena-card p-4">

    <h2 class="fw-bold text-danger">Silmek istediğinize emin misiniz?</h2>
    <hr class="arena-divider" />

    <p><strong>Hizmet:</strong> @Model.Name</p>
    <p><strong>Ücret:</strong> @Model.Price ₺</p>
    <p><strong>Salon:</strong> @Model.FitnessCenter?.Name</p>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="arena-btn-sm-danger">Evet, Sil</button>
        <a asp-action="Index" class="arena-btn-outline ms-2">İptal</a>
    </form>

</div>