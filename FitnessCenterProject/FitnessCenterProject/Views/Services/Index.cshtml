@model IEnumerable<FitnessCenterProject.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<h1 class="mb-3">Hizmetler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        Yeni Hizmet Ekle
    </a>
</p>

<table class="table table-striped table-hover mt-3">
    <thead class="table-dark">
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Süre (dk)</th>
            <th>Ücret</th>
            <th>Spor Salonu</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.DurationMinutes</td>
                <td>@item.Price</td>
                <td>@item.FitnessCenter?.Name</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        Detay
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                        Düzenle
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
