@model FitnessCenterProject.Models.FitnessCenter
@{
    ViewData["Title"] = "Yeni Salon";
}

<h1 class="arena-page-title neon-red mb-4">Yeni Spor Salonunu Ekle</h1>

<div class="arena-form-container col-md-6">

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label arena-label"></label>
            <input asp-for="Name" class="form-control arena-input" />
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label arena-label"></label>
            <input asp-for="Address" class="form-control arena-input" />
        </div>

        <div class="mb-3">
            <label asp-for="WorkingHours" class="form-label arena-label"></label>
            <input asp-for="WorkingHours" class="form-control arena-input" placeholder="09:00 - 22:00" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label arena-label"></label>
            <textarea asp-for="Description" class="form-control arena-input" rows="3"></textarea>
        </div>

        <button type="submit" class="btn arena-btn-lg">Kaydet</button>
        <a asp-action="Index" class="btn arena-btn-outline ms-2">İptal</a>
    </form>
</div>