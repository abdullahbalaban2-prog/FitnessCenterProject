@model FitnessCenterProject.Models.FitnessCenter

@{
    ViewData["Title"] = "Yeni Spor Salonu Ekle";
}

<h1 class="mt-3 mb-3">Yeni Spor Salonu Ekle</h1>

<div class="row">
    <div class="col-md-6">
        @* Hata özetini göstermek için *@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-action="Create" method="post">
            @* CSRF koruması *@
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="WorkingHours" class="form-label"></label>
                <input asp-for="WorkingHours" class="form-control" placeholder="Hafta içi 09:00 - 22:00" />
                <span asp-validation-for="WorkingHours" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                Kaydet
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                Listeye Dön
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @* jQuery client-side validation *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
