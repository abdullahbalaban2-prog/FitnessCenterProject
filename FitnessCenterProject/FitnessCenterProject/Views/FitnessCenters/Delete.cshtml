@model FitnessCenterProject.Models.FitnessCenter

@{
    ViewData["Title"] = "Spor Salonunu Sil";
}

<h1 class="mt-3 mb-3 text-danger">Spor Salonunu Sil</h1>

<div class="alert alert-warning">
    Bu spor salonunu silmek istediğinizden emin misiniz?
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.WorkingHours)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.WorkingHours)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    @* Silinecek kaydın Id'si gizli olarak gönderiliyor *@
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">
        Evet, Sil
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        İptal
    </a>
</form>
