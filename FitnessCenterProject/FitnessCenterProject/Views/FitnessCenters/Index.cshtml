@model IEnumerable<FitnessCenterProject.Models.FitnessCenter>

@{
    ViewData["Title"] = "Spor Salonları";
}

<h1 class="mt-3 mb-3">Spor Salonları</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        Yeni Salon Ekle
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().WorkingHours)
            </th>
            <th></th> @* İşlemler sütunu *@
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.WorkingHours
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                            Detay
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning ms-1">
                            Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">
                            Sil
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">
                    Kayıtlı spor salonu bulunamadı.
                </td>
            </tr>
        }
    </tbody>
</table>
