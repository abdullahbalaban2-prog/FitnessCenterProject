@model IEnumerable<FitnessCenterProject.Models.FitnessCenter>

@{
    ViewData["Title"] = "Spor Salonları";
}

<h1 class="arena-page-title neon-red mb-4">Spor Salonları</h1>

<div class="d-flex justify-content-between mb-4">
    <a asp-action="Create" class="btn arena-btn-lg-sm">
        Yeni Salon Ekle
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center fw-bold">
        Henüz kayıtlı salon yok.
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="arena-card arena-salon-card">

                    <div class="arena-card-header">
                        <h3 class="fw-bold neon-red">@item.Name</h3>
                    </div>

                    <div class="arena-card-body text-light">
                        <p class="mb-1"><strong>Adres:</strong> @item.Address</p>
                        <p class="mb-1"><strong>Çalışma Saatleri:</strong> @item.WorkingHours</p>
                        <p class="small-text">@item.Description</p>
                    </div>

                    <div class="arena-card-footer d-flex justify-content-between">
                        <a class="arena-btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                        <a class="arena-btn-sm-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                        <a class="arena-btn-sm-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </div>
                </div>
            </div>
        }
    </div>
}