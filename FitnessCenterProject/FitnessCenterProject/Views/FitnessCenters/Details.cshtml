@model FitnessCenterProject.Models.FitnessCenter
@{
    ViewData["Title"] = "Salon Detayı";
}

<h1 class="arena-page-title neon-red mb-4">Salon Detayı</h1>

<div class="arena-card p-4">

    <h2 class="fw-bold neon-red">@Model.Name</h2>
    <hr class="arena-divider" />

    <p><strong>Adres:</strong> @Model.Address</p>
    <p><strong>Çalışma Saatleri:</strong> @Model.WorkingHours</p>
    <p><strong>Açıklama:</strong> @Model.Description</p>

    <div class="mt-4 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="arena-btn-sm-warning">Düzenle</a>
        <a asp-action="Index" class="arena-btn-outline">Geri Dön</a>
    </div>
</div>