@model FitnessCenterProject.ViewModels.HomeViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
    ViewData["MetaDescription"] = Localizer["MetaDescription"];
}

<section class="hero mb-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">@Localizer["HeroTitle"]</h1>
        <p class="lead mt-3 mb-4">@Localizer["HeroSubtitle"]</p>
        <a class="btn btn-light btn-lg me-2" asp-controller="Portfolio" asp-action="Index">@Localizer["HeroPortfolioCta"]</a>
        <a class="btn btn-outline-light btn-lg" asp-controller="Quote" asp-action="Index">@Localizer["HeroQuoteCta"]</a>
    </div>
</section>

<section class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="section-title">@Localizer["FeaturedProjectsTitle"]</h2>
        <a asp-controller="Portfolio" asp-action="Index" class="text-decoration-none">@Localizer["FeaturedProjectsAll"]</a>
    </div>
    <div class="row g-4">
        @foreach (var project in Model.FeaturedProjects)
        {
            <div class="col-md-4">
                <div class="card h-100">
                    @if (!string.IsNullOrWhiteSpace(project.CoverImagePath))
                    {
                        <img src="@project.CoverImagePath" class="card-img-top" alt="@project.Title" />
                    }
                    <div class="card-body">
                        <span class="badge badge-soft mb-2">@project.Category?.Name</span>
                        <h5 class="card-title">@project.Title</h5>
                        <p class="card-text text-muted">@project.Location</p>
                        <a asp-controller="Portfolio" asp-action="Details" asp-route-slug="@project.Slug" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<section class="mb-5">
    <h2 class="section-title mb-3">@Localizer["ServicesTitle"]</h2>
    <div class="row g-4">
        @foreach (var service in Model.Services)
        {
            <div class="col-md-4">
                <div class="card h-100 p-3">
                    <div class="card-body">
                        <h5 class="card-title">@service.Title</h5>
                        <p class="card-text text-muted">@service.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<section class="mb-5">
    <h2 class="section-title mb-3">@Localizer["TestimonialsTitle"]</h2>
    <div class="row g-4">
        @foreach (var testimonial in Model.Testimonials)
        {
            <div class="col-md-4">
                <div class="card h-100 p-3">
                    <div class="card-body">
                        <p class="card-text">“@testimonial.Comment”</p>
                        <p class="fw-bold mb-0">@testimonial.FullName</p>
                        <small class="text-muted">@testimonial.CompanyOrProject</small>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<section class="text-center mb-5">
    <h2 class="section-title mb-3">@Localizer["CtaTitle"]</h2>
    <p class="text-muted">@Localizer["CtaSubtitle"]</p>
    <a class="btn btn-dark btn-lg" asp-controller="Quote" asp-action="Index">@Localizer["CtaButton"]</a>
</section>
