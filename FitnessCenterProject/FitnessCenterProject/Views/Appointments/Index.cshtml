@model IEnumerable<FitnessCenterProject.Models.Appointment>

@{
    ViewData["Title"] = "Randevular";
}

<h1 class="mb-3">Randevular</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Randevu Oluştur</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Üye</th>
            <th>Eğitmen</th>
            <th>Hizmet</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Ücret</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(
                        string.IsNullOrEmpty(item.Member?.Name)
                        ? item.Member?.Email
                        : item.Member?.Name
                        )
                </td>
                <td>
                    @(item.Trainer != null
                        ? $"{item.Trainer.FirstName} {item.Trainer.LastName}"
                        : "")
                </td>
                <td>
                    @item.Service?.Name
                </td>
                <td>
                    @item.StartDateTime.ToString("g")
                </td>
                <td>
                    @item.EndDateTime.ToString("g")
                </td>
                <td>
                    @item.Price.ToString("0.00") ₺
                </td>
                <td>
                    @item.Status
                </td>
                <td class="text-nowrap">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
