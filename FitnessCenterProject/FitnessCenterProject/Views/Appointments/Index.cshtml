@model IEnumerable<FitnessCenterProject.Models.Appointment>
@using FitnessCenterProject.Models

@{
    ViewData["Title"] = "Randevu Yönetimi";
}

<h1 class="mb-3">Randevu Yönetimi (Admin)</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Üye</th>
            <th>Hizmet</th>
            <th>Eğitmen</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Ücret</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Member?.Email</td>
                <td>@a.Service?.Name</td>
                <td>@a.Trainer?.FirstName @a.Trainer?.LastName</td>
                <td>@a.StartDateTime</td>
                <td>@a.EndDateTime</td>
                <td>@a.Price</td>
                <td>@a.Status</td>
                <td>
                    @if (a.Status == AppointmentStatus.Pending)
                    {
                        <a asp-action="Approve" asp-route-id="@a.Id" class="btn btn-sm btn-success">
                            Onayla
                        </a>
                        <a asp-action="Reject" asp-route-id="@a.Id" class="btn btn-sm btn-danger ms-1">
                            Reddet
                        </a>
                    }
                    <a asp-action="Details" asp-route-id="@a.Id" class="btn btn-sm btn-outline-secondary ms-1">
                        Detay
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
