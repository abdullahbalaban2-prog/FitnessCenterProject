@model FitnessCenterProject.Models.Appointment

@{
    ViewData["Title"] = "Randevu Sil";
}

<h1 class="mb-3 text-danger">Randevuyu Sil</h1>

<h4>Bu randevuyu silmek istediğinizden emin misiniz?</h4>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3">Üye</dt>
        <dd class="col-sm-9">
            @(
                string.IsNullOrEmpty(Model.Member?.Name)
                ? Model.Member?.Email
                : Model.Member?.Name
                )
        </dd>

        <dt class="col-sm-3">Eğitmen</dt>
        <dd class="col-sm-9">
            @(Model.Trainer != null ? $"{Model.Trainer.FirstName} {Model.Trainer.LastName}" : "")
        </dd>

        <dt class="col-sm-3">Hizmet</dt>
        <dd class="col-sm-9">
            @Model.Service?.Name
        </dd>

        <dt class="col-sm-3">Başlangıç</dt>
        <dd class="col-sm-9">
            @Model.StartDateTime.ToString("g")
        </dd>

        <dt class="col-sm-3">Bitiş</dt>
        <dd class="col-sm-9">
            @Model.EndDateTime.ToString("g")
        </dd>

        <dt class="col-sm-3">Ücret</dt>
        <dd class="col-sm-9">
            @Model.Price.ToString("0.00") ₺
        </dd>

        <dt class="col-sm-3">Durum</dt>
        <dd class="col-sm-9">
            @Model.Status
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>
