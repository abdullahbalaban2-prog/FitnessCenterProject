@model FitnessCenterProject.Models.Appointment

@{
    ViewData["Title"] = "Randevu Detayları";
}

<h1 class="mb-3">Randevu Detayları</h1>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3">Üye</dt>
        <dd class="col-sm-9">
            @(
                string.IsNullOrEmpty(Model.Member?.Name)
                ? Model.Member?.Email
                : Model.Member?.Name
                )
        </dd>

        <dt class="col-sm-3">Eğitmen</dt>
        <dd class="col-sm-9">
            @(Model.Trainer != null ? $"{Model.Trainer.FirstName} {Model.Trainer.LastName}" : "")
        </dd>

        <dt class="col-sm-3">Hizmet</dt>
        <dd class="col-sm-9">
            @Model.Service?.Name
        </dd>

        <dt class="col-sm-3">Başlangıç</dt>
        <dd class="col-sm-9">
            @Model.StartDateTime.ToString("g")
        </dd>

        <dt class="col-sm-3">Bitiş</dt>
        <dd class="col-sm-9">
            @Model.EndDateTime.ToString("g")
        </dd>

        <dt class="col-sm-3">Ücret</dt>
        <dd class="col-sm-9">
            @Model.Price.ToString("0.00") ₺
        </dd>

        <dt class="col-sm-3">Durum</dt>
        <dd class="col-sm-9">
            @Model.Status
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>
