@model IEnumerable<FitnessCenterProject.Models.AiRecommendation>

@{
    ViewData["Title"] = "Önerilerim";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Önerilerim</h2>
    <a asp-action="Create" class="btn btn-primary">Yeni Öneri Üret</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Henüz kayıtlı bir öneriniz yok. “Yeni Öneri Üret” ile oluşturabilirsiniz.
    </div>
}
else
{
    foreach (var item in Model)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <strong>@item.RequestType</strong>
                        <span class="text-muted">• @item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>
                </div>

                <hr />

                <div class="row mb-2">
                    <div class="col-md-3"><strong>Boy:</strong> @item.Height</div>
                    <div class="col-md-3"><strong>Kilo:</strong> @item.Weight</div>
                    <div class="col-md-3"><strong>Vücut Tipi:</strong> @item.BodyType</div>
                    <div class="col-md-3"><strong>Hedef:</strong> @item.Goal</div>
                </div>

                <pre class="mb-0" style="white-space:pre-wrap">@item.GeneratedPlan</pre>

                @if (!string.IsNullOrWhiteSpace(item.GeneratedImageUrl))
                {
                    <hr />
                    <a href="@item.GeneratedImageUrl" target="_blank">Üretilen görsel linki</a>
                }
            </div>
        </div>
    }
}
