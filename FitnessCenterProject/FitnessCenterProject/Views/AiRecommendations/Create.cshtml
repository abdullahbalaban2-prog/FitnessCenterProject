@model FitnessCenterProject.Models.AiRecommendation
@{
    ViewData["Title"] = "AI Önerisi Al";
}

<h2 class="mb-4">AI Önerisi Al</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Create" method="post" class="col-lg-6">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Height" class="form-label">Boy (cm)</label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Weight" class="form-label">Kilo (kg)</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BodyType" class="form-label">Vücut Tipi</label>
        <input asp-for="BodyType" class="form-control" placeholder="Örn: İnce/Orta/Atletik" />
        <span asp-validation-for="BodyType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Goal" class="form-label">Hedef</label>
        <input asp-for="Goal" class="form-control" placeholder="Örn: Kilo verme/Kas" />
        <span asp-validation-for="Goal" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RequestType" class="form-label">İstek Tipi</label>
        <select asp-for="RequestType" class="form-select">
            <option value="">Seçin</option>
            <option>Egzersiz Planı</option>
            <option>Diyet Önerisi</option>
            <option>Egzersiz + Diyet</option>
        </select>
        <span asp-validation-for="RequestType" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Öneri Üret</button>
    <a asp-controller="AiRecommendations" asp-action="MyRecommendations" class="btn btn-secondary ms-2">Önerilerim</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
