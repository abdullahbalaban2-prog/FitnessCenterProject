<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessCenterProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessCenterProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    Fitness Center
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- SOL MENÜ (HERKES İÇİN GÖRÜNENLER) -->
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                Ana Sayfa
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="FitnessCenters" asp-action="Index">
                                Salonlar
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Services" asp-action="Index">
                                Hizmetler
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Trainers" asp-action="Index">
                                Antrenörler
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Appointments" asp-action="MyAppointments">
                                Randevularım
                            </a>
                        </li>

                        <!-- ✅ DÜZELTİLDİ: asp-action="My" -> "MyRecommendations" -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="AiRecommendations" asp-action="MyRecommendations">
                                AI Önerileri
                            </a>
                        </li>

                        @* YALNIZCA ADMIN İÇİN YÖNETİM MENÜSÜ *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark"
                                   href="#" id="adminDropdown"
                                   role="button" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Yönetim
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="FitnessCenters" asp-action="Index">
                                            Salon Yönetimi
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="Index">
                                            Hizmet Yönetimi
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Trainers" asp-action="Index">
                                            Antrenör Yönetimi
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="TrainerAvailabilities" asp-action="Index">
                                            Müsaitlikler
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Appointments" asp-action="Index">
                                            Tüm Randevular
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- SAĞ TARAF (GİRİŞ / ÇIKIŞ / KULLANICI ADI) -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container py-2">
            &copy; 2025 - FitnessCenterProject -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
