<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - İç Mimar Portföy</title>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <!-- ============================= -->
    <!--          NAVBAR              -->
    <!-- ============================= -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">

                <!-- LOGO -->
                <a class="navbar-brand fw-bold text-uppercase" asp-controller="Home" asp-action="Index">
                    İç Mimar Portföy
                </a>

                <button class="navbar-toggler bg-dark text-white" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">

                    <!-- LEFT MENU -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Portfolio" asp-action="Index">Portföy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Services" asp-action="Index">Hizmetler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="About" asp-action="Index">Hakkımda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contact" asp-action="Index">İletişim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Quote" asp-action="Index">Teklif Al</a>
                        </li>

                        <!-- ADMIN MENU -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#" role="button" data-bs-toggle="dropdown">
                                    Yönetim
                                </a>

                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/admin">Gösterge Paneli</a></li>
                                    <li><a class="dropdown-item" href="/admin/projects">Projeler</a></li>
                                    <li><a class="dropdown-item" href="/admin/categories">Kategoriler</a></li>
                                    <li><a class="dropdown-item" href="/admin/services">Hizmetler</a></li>
                                    <li><a class="dropdown-item" href="/admin/testimonials">Referanslar</a></li>
                                    <li><a class="dropdown-item" href="/admin/messages">Mesajlar</a></li>
                                    <li><a class="dropdown-item" href="/admin/quotes">Teklif Talepleri</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- RIGHT SIDE USER LOGIN -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>


    <!-- ============================= -->
    <!--           CONTENT             -->
    <!-- ============================= -->
    <div class="container py-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <!-- ============================= -->
    <!--            FOOTER             -->
    <!-- ============================= -->
    <footer class="footer text-center py-3 mt-4 border-top">
        <p class="mb-1">© @DateTime.Now.Year İç Mimar Portföy</p>
        <a asp-controller="Home" asp-action="Privacy" class="text-muted small">Gizlilik Politikası</a>
    </footer>


    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>
