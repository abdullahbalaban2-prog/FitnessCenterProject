@using Microsoft.AspNetCore.Identity
@using FitnessCenterProject.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IStringLocalizer<SharedResource> SharedLocalizer

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-light" href="/admin" title="@SharedLocalizer["AdminPanel"]">
                @SharedLocalizer["AdminPanel"]
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline"
                  asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@(Url.Action("Index", "Home", new { area = "" }))"
                  method="post">
                <button type="submit" class="nav-link btn btn-link text-light">
                    @SharedLocalizer["Logout"]
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light"
               asp-area="Identity"
               asp-page="/Account/Login">
                @SharedLocalizer["LoginAdmin"]
            </a>
        </li>
    }
</ul>
