@model IEnumerable<FitnessCenterProject.Models.Project>
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
    ViewData["MetaDescription"] = Localizer["MetaDescription"];
    var categories = ViewBag.Categories as List<FitnessCenterProject.Models.PortfolioCategory> ?? new();
    var activeCategory = ViewBag.ActiveCategory as string;
}

<h1 class="section-title mb-4">@Localizer["Heading"]</h1>

<div class="mb-4 d-flex flex-wrap gap-2">
    <a class="btn btn-outline-dark @(string.IsNullOrWhiteSpace(activeCategory) ? "active" : "")" asp-action="Index">@Localizer["All"]</a>
    @foreach (var category in categories)
    {
        <a class="btn btn-outline-dark @(activeCategory == category.Slug ? "active" : "")"
           asp-action="Index" asp-route-category="@category.Slug">
            @category.Name
        </a>
    }
</div>

<div class="row g-4">
    @foreach (var project in Model)
    {
        <div class="col-md-4">
            <div class="card h-100">
                @if (!string.IsNullOrWhiteSpace(project.CoverImagePath))
                {
                    <img src="@project.CoverImagePath" class="card-img-top" alt="@project.Title" />
                }
                <div class="card-body">
                    <span class="badge badge-soft mb-2">@project.Category?.Name</span>
                    <h5 class="card-title">@project.Title</h5>
                    <p class="text-muted">@project.Location</p>
                    <a asp-action="Details" asp-route-slug="@project.Slug" class="stretched-link"></a>
                </div>
            </div>
        </div>
    }
</div>
