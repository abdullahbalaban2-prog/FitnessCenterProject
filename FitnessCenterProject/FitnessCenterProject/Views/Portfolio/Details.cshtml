@model FitnessCenterProject.Models.Project
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Model.Title;
    ViewData["MetaDescription"] = !string.IsNullOrWhiteSpace(Model.Description) && Model.Description.Length > 160
        ? $"{Model.Description.Substring(0, 157)}..."
        : Model.Description;
    ViewData["OgType"] = "article";
    ViewData["OgImage"] = Model.CoverImagePath;
}

<div class="mb-4">
    <a asp-action="Index" class="text-decoration-none">← @Localizer["BackToPortfolio"]</a>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        @if (!string.IsNullOrWhiteSpace(Model.CoverImagePath))
        {
            <img src="@Model.CoverImagePath" class="img-fluid rounded" alt="@Model.Title" />
        }
        else
        {
            <div class="card p-5 text-center">@Localizer["NoCoverImage"]</div>
        }
    </div>
    <div class="col-lg-6">
        <h1 class="section-title">@Model.Title</h1>
        <p class="text-muted">@Model.Location</p>
        <div class="d-flex flex-wrap gap-2 mb-3">
            <span class="badge badge-soft">@Model.Category?.Name</span>
            @if (!string.IsNullOrWhiteSpace(Model.Year))
            {
                <span class="badge badge-soft">@Model.Year</span>
            }
            @if (Model.AreaM2.HasValue)
            {
                <span class="badge badge-soft">@Model.AreaM2 m²</span>
            }
        </div>
        <p>@Model.Description</p>
    </div>
</div>

@if (Model.Images != null && Model.Images.Any())
{
    <hr class="my-5" />
    <h2 class="section-title mb-3">@Localizer["GalleryTitle"]</h2>
    <div class="row g-4 gallery-grid">
        @foreach (var image in Model.Images.OrderBy(i => i.SortOrder))
        {
            <div class="col-md-4">
                <img src="@image.ImagePath" alt="@Model.Title" />
            </div>
        }
    </div>
}
